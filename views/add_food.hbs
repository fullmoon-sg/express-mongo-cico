{{#extends 'base'}}

    {{#block 'content'}}
        <form method="POST">
            <div>
                <label class="form-label">Name:</label>
                <input type="text" name="name" class="form-control" />
            </div>
            <div>
                <labe class="form-label">Calories:</label>
                <input type="text" name="calories" class="form-control"/>
            </div>
            <div>
                <label class="form-label">Meal:</label>
                <select name="meal" class="form-control">
                    <option value="breakfast">Breakfast</option>
                    <option value="lunch">Lunch</option>
                    <option value="dinner">Dinner</option>
                    <option value="snack">Snack/Supper</option>
                </select>
            </div>
            <div>
                <label class="form-label">Date:</label>
                <input class="form-control" type="date" name="date"/>
            </div>

            <div>
                <label class="form-label">Tags:</label>
                <div>
                    <input  name="tags" type="checkbox" value="unhealthy"><label class="form-check-label">Unhealthy</label>
                    <input name="tags" type="checkbox" value="oily"><label class="form-check-label">Oily</label>
                    <input name="tags" type="checkbox" value="delicious"><label>Delicious</label>
                    <input name="tags" type="checkbox" value="vegan"><label>Vegan</label>
                    <input name="tags" type="checkbox" value="gluten-free"><label >Gluten Free</label>
                    <input  name="tags" type="checkbox" value="impossible-meat"><label >Impossible Meat</label>
                </div>
            </div>

            <input class=" btn btn-primary" type="submit"/>
        <form>
    {{/block}}

{{/extends}}